{
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
			"esnext",
			"DOM"
		],
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib/",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "$astro": [
        "src/astro/index.ts"
      ],
      "$astro/*": [
        "src/astro/*"
      ],
      "$hd": [
        "src/humandesign/index.ts"
      ],
      "$hd/*": [
        "src/humandesign/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
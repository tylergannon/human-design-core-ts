{
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib/",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": "/Users/tyler/src/HumanDesign/web/human-design-core-ts",
    "paths": {
      "$astro": [
        "src/astro/index.ts"
      ],
      "$astro/*": [
        "src/astro/*"
      ],
      "$hd": [
        "src/humandesign/index.ts"
      ],
      "$hd/*": [
        "src/humandesign/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}